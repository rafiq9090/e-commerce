# Copy this file to .env and replace placeholders with your real credentials.
# Example MySQL connection string format:
# DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DATABASE"

# Replace the values below before running Prisma commands.
DATABASE_URL="mysql://your_user:your_password@localhost:3306/your_database"

# JWT secret used to sign tokens. Replace with a strong, random value in production.
JWT_SECRET="your_jwt_secret_here"
# Token expiry (e.g., 1h, 7d)
JWT_EXPIRES_IN=7d
# Frontend base URL used in emails and reset links
FRONTEND_URL="http://localhost:5173"

# Optional: Set a Node environment (development|production)
NODE_ENV=development
